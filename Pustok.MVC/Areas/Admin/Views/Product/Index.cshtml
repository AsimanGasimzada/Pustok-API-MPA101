@model List<ProductGetDto>

@{
    ViewData["Title"] = "Categories";
    int count = 1;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Products</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Add New Product
    </a>
</div>

@if (Model?.Count == 0)
{
    <div class="alert alert-info" role="alert">
        <i class="fas fa-info-circle"></i> No categories found. <a asp-action="Create">Create one now</a>
    </div>
}
else
{
    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width: 10%;">#</th>
                        <th style="width: 50%;">Name</th>
                        <th style="width: 50%;">ImagePath</th>
                        <th style="width: 50%;">Price</th>
                        <th style="width: 50%;">CategoryName</th>
                        <th style="width: 40%;" class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model!)
                    {
                        <tr>
                            <td>
                                <span class="badge bg-secondary">@(count++)</span>
                            </td>
                            <td>
                                <h6 class="mb-0">@product.Name</h6>
                            </td>
                            <td>
                                <img src="@product.ImagePath" />
                            </td>
                            <td>
                                <h6 class="mb-0">@product.Price</h6>
                            </td>
                            <td>
                                <h6 class="mb-0">@product.CategoryName</h6>
                            </td>
                            <td class="text-end">
                                <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-sm btn-info" title="View details">
                                    <i class="fas fa-eye"></i> View
                                </a>
                                <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-sm btn-warning" title="Edit">
                                    <i class="fas fa-edit"></i> Update
                                </a>
                                <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-sm btn-danger" title="Delete">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
}